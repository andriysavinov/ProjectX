<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>ProjectX</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/dashboard" class="btn btn-default btn-sm pull-left">Dashboard</a>
		<a href="/logout" class="btn btn-default btn-sm pull-right">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-md-offset-3 col-sm-6">
			<div class="well text-center">
				<div>
					<img style="width:50%;" src="<%= user.avatar %>">
				</div>
				<div>
					<h3>Personal Information</h3>
					<p class="text-left">
						<strong>email</strong>: <%= user.email %><br>
						<strong>username</strong>: <%= user.username %><br>
						<strong>first_name</strong>: <%= user.first_name %><br>
						<strong>last_name</strong>: <%= user.last_name %><br>
						<strong>age</strong>: <%= user.age %><br>
						<strong>facebook</strong>: <a><%= user.facebook %></a><br>
						<strong>created_at</strong>: <%= user.createdAt %><br>
						<strong>updated_at</strong>: <%= user.updatedAt %><br>
						<strong>role_id</strong>: <%= user.role_id %><br>
						<strong>id</strong>: <%= user._id %><br>
						<strong>password</strong>: <%= user.password %><br>
					</p>
				</div>
			</div>
		</div>

	</div>

</div>
</body>
</html>
